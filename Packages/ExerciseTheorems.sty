\RequirePackage{tikz}	% DRAW MATH <3
\RequirePackage{amsthm}	% Meta page layout for maths - "proof" env, theorem etc.
%\RequirePackage{thmtools}
\RequirePackage{color}	% As it sounds - foreground and background colors.
\RequirePackage[framemethod=tikz]{mdframed}	% Allows frames with different options



\define@key{thmdef}{mdthm}[{}]{
	\thmt@trytwice{\def\thmt@theoremdefiner{\mdtheorem[#1]}}{}
}


