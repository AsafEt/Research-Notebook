%%% Colors %%%
% This is super easy - write the RGB values of the color you want. Many websites provide translation between different formats.
\definecolor{lightYellow}{RGB}{255, 252, 237}
\definecolor{hardYellow}{RGB}{255, 225, 90}
\definecolor{hardBlue}{RGB}{140, 201, 248}
\definecolor{lightBlue}{RGB}{244, 248, 255}



%%% MD Styles %%%
% Define more box styles here. For properties and examples - read mdframed documentation
\mdfdefinestyle{lightYellow}{
	outerlinewidth = 2,
	roundcorner = 5pt,
	backgroundcolor=lightYellow,
	outerlinecolor=hardYellow,
	linecolor=lightYellow
}

\mdfdefinestyle{lightBlue}{
	outerlinewidth = 2,
	roundcorner = 5pt,
	backgroundcolor=lightBlue,
	outerlinecolor=hardBlue,
	linecolor=lightBlue
}


%% Boxes %%%
% I like to use boxes when writing multiple definitions/ theorems consecutively, and within the boxes use the regular environments (i.e - not framed). This is not a must, of course.
\newmdenv[style=lightYellow]{yellowBox}
\newmdenv[style=lightBlue]{blueBox}


